@{
    ViewData["Title"] = "Agregar especie";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Agregar especie
            </h1>
        </div>
    </div>
</div>
<br />
<br />
<form action="/" method="post">
    <div class="form-container">
        <div class="form-group row ">
            <div class="col-sm-2"></div>
            <div class="col-sm-1">
                <label class="formText" for="codigo"> Código: </label>
            </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" name="codigo" id="codigo" />
            </div>
            <div class="col-sm-2"></div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-1">
                <label class="formText" for="nombre"> Nombre: </label>
            </div>
            <div class="col-sm-5">
                <input type="text" class="form-control" name="nombre" id="nombre" />
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</form>
<div class="bottom-buttons">
    <div class="row w-100 d-flex">
        <div class="col-sm-3"></div>
        <div class="col-sm-5 w-25">
            <a asp-action="Index" class="btn btn-danger w-100 h-100 align-content-center">Regresar</a>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-5 w-25">
            <a asp-action="Index" class="btn btn-success w-100 h-100 align-content-center">Agregar</a>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>