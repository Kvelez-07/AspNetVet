@model IEnumerable<AspNetVet.Models.AppUsers>

@{
    ViewData["Title"] = "Veterinarios";
}

<style>
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .logo {
        font-size: 32px;
        font-weight: bold;
        color: #3c3c7b;
    }

    .nav-container {
        display: flex;
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
    }

    .main-nav {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .main-nav li {
            padding: 15px 20px;
            cursor: pointer;
        }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .search-container {
        display: flex;
        align-items: center;
        margin: 20px 0;
        gap: 10px;
    }

    .btn-regresar {
        background-color: #e79a9a;
        color: black;
        border: none;
        padding: 10px 25px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-buscar {
        background-color: #8989f3;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 5px;
        cursor: pointer;
    }

    .search-input {
        flex-grow: 1;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .table-header {
        background-color: #7a5c9e;
        color: white;
    }

        .table-header th {
            padding: 12px;
            text-align: left;
        }

    .select-btn {
        background-color: black;
        color: white;
        border: none;
        border-radius: 50%;
        padding: 8px 12px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .vet-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .vet-table td {
            padding: 12px;
            border: 1px solid #ddd;
        }

        .vet-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Buscar veterinario
            </h1>
        </div>
    </div>
</div>
<br/>
<br/>

<div class="row">
    <div class="col-sm-2">
        <a class="btn btn-danger w-100" id="backPetBtn" asp-action="AddAppointment">Regresar</a>
    </div>
    <div class="col-sm-1">
        <label style="margin-right: 10px;" class="lblSearch">Buscar:</label>
    </div>
    <div class="col-sm-7">
        <input type="text" class="form-control w-100" id="searchPetInput" placeholder="Código / Nombre / Dueño" />
    </div>
    <div class="col-sm-2">
        <a type="button" class="btn btn-info w-100" id="searchPetBtn">Buscar</a>
    </div>
</div>

<table class="vet-table" id="vetTable">
    <thead>
        <tr class="table-header">
            <th>Id</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Telefono</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody id="vetTableBody">
        @if (Model != null && Model.Any())
        {
            foreach (var vet in Model)
            {
                <tr>
                    <td>@vet.Id</td>
                    <td>@vet.Code</td>
                    <td>@vet.FullName</td>
                    <td>@vet.Email</td>
                    <td>@vet.Phone</td>
                    <td>
                        <a asp-action="AddAppointment" class="btn w-100 h-100 align-content-center bg-transparent" data-id="@vet.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                                <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52z"/>
                            </svg>
                            Seleccionar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>1</td>
                <td>000001</td>
                <td>sample text</td>
                <td>sample text</td>
                <td>sample text</td>
                <td>
                    <a asp-action="AddAppointment" class="btn w-100 h-100 align-content-center bg-transparent">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                            <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52z"/>
                        </svg>
                        Seleccionar
                    </a>
                </td>
            </tr>
            <tr>
                <td colspan="7" class="text-center">No hay mas veterinarios disponibles.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}