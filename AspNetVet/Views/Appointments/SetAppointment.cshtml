@{
    ViewData["Title"] = "Agendar Cita";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .logo {
        font-size: 32px;
        font-weight: bold;
        color: #3c3c7b;
        margin-left: 30px;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

    .main-nav {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .main-nav li {
            padding: 10px 20px;
            position: relative;
            cursor: pointer;
        }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #ffffff;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.1);
        z-index: 1;
        left: 0;
        top: 100%;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .main-nav li:hover .dropdown-content {
        display: block;
    }

    .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-group {
        display: flex;
        margin-bottom: 20px;
        align-items: center;
    }

    .form-label {
        width: 150px;
        text-align: right;
        padding-right: 20px;
        font-weight: bold;
        color: #3c3c7b;
    }

    .form-field {
        flex: 1;
    }

        .form-field input, .form-field select, .form-field textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-field textarea {
            height: 120px;
        }

    .search-button {
        background-color: #8989f3;
        color: white;
        border: none;
        padding: 8px 30px;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 10px;
    }

    .bottom-buttons {
        display: flex;
        justify-content: space-between;
        padding: 20px 0;
        background-color: #eeebf8;
        position: fixed;
        bottom: 0;
        width: 100%;
        left: 0;
        padding: 20px;
    }

    .btn-regresar {
        background-color: #e79a9a;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-guardar {
        background-color: #92ec92;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .buttons-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }
</style>

<div class="nav-container">
    <div class="logo">Logo</div>
    <ul class="main-nav">
        <li>Principal</li>
        <li>
            Usuarios
            <div class="dropdown-content">
                <a href="#">Usuarios</a>
                <a href="#">Veterinarios</a>
                <a href="#">Clientes</a>
            </div>
        </li>
        <li>
            Mascotas
            <div class="dropdown-content">
                <a href="#">Mascotas</a>
                <a href="#">Especies</a>
                <a href="#">Raza</a>
            </div>
        </li>
        <li>Proveedores</li>
        <li>
            Citas
            <div class="dropdown-content">
                <a href="#">Solicitud</a>
                <a href="#">En proceso</a>
                <a href="#">Finalizadas</a>
            </div>
        </li>
        <li>
            Inventario
            <div class="dropdown-content">
                <a href="#">Productos</a>
                <a href="#">Medicinas</a>
                <a href="#">Kardex General</a>
            </div>
        </li>
        <li>Ventas</li>
    </ul>
</div>

<div class="form-container">
    <div class="form-group">
        <label class="form-label">Código:</label>
        <div class="form-field" style="max-width: 300px;">
            <input type="text" id="code" name="code" />
        </div>
        <label class="form-label" style="margin-left: 20px;">Fecha:</label>
        <div class="form-field" style="max-width: 300px;">
            <input type="date" id="date" name="date" />
        </div>
        <label class="form-label" style="margin-left: 20px;">Tipo de cita:</label>
        <div class="form-field" style="max-width: 300px;">
            <select id="type" name="type">
                <option>Tipo1</option>
                <option>Consulta</option>
                <option>Urgencia</option>
                <option>Control</option>
                <option>Vacunacion</option>
                <option>Desparacitacion</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Cliente:</label>
        <div class="form-field" style="max-width: 630px;">
            <input type="text" id="client" name="client" />
        </div>
        <label class="form-label" style="margin-left: 20px;">Estado:</label>
        <div class="form-field" style="max-width: 300px;">
            <select id="status" name="status">
                <option>Tipo1</option>
                <option>Pendiente</option>
                <option>Confirmada</option>
                <option>Cancelada</option>
                <option>Realizada</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Mascota:</label>
        <div class="form-field">
            <input type="text" id="pet" name="pet" />
        </div>
        <button type="button" class="search-button">Buscar</button>
    </div>

    <div class="form-group">
        <label class="form-label">Veterinario:</label>
        <div class="form-field">
            <input type="text" id="veterinarian" name="veterinarian" />
        </div>
        <button type="button" class="search-button">Buscar</button>
    </div>

    <div class="form-group">
        <label class="form-label">Descripción:</label>
        <div class="form-field">
            <textarea id="description" name="description"></textarea>
        </div>
    </div>
</div>

<div class="bottom-buttons">
    <div class="buttons-container">
        <button type="button" class="btn-regresar">Regresar</button>
        <button type="submit" class="btn-guardar">Guardar</button>
    </div>
</div>

<script>
    // Optional JavaScript can be added here
    document.addEventListener('DOMContentLoaded', function() {
        // Any initialization code can go here
    });
</script>