@model IEnumerable<AspNetVet.Models.Species>

@{
    ViewData["Title"] = "Obtener especie";
}

<style>

        .main-nav li {
            padding: 15px 20px;
            cursor: pointer;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Buscar especie
            </h1>
        </div>
    </div>
</div>

<div class="SearchBox">
    <form action="/" method="post" class="formSeach">
        <div class="row">
            <div class="col-md-2">
                <a class="btn btn-danger w-100" id="btnRegresar" asp-action="AddBreed">Regresar</a>
            </div>
            <div class="col-md-1">
                <label class="lblSearch">
                    Buscar:
                </label>
            </div>
            <div class="col-md-7">
                <input type="text" class="px-4 form-control" name="busqueda" placeholder="Código / nombre" />
            </div>
            <div class="col-md-2">
                <a class="btn btn-info w-100" id="btnBuscar">Buscar</a>
            </div>
        </div>
    </form>
    <br />
</div>
<br/>
<table id="TableModel" class="table table-bordered table-hover">
    <thead>
        <tr class="table-header">
            <th>Id</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody id="breedTableBody">
        @if (Model != null && Model.Any())
        {
            foreach (var specie in Model)
            {
                <tr>
                    <td>@specie.Id</td>
                    <td>@specie.Name</td>
                    <td>@specie.Status</td>
                    <td>
                        <a asp-action="AddBreed" class="btn w-100 h-100 align-content-center bg-transparent" data-id="@specie.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                                <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52z"/>
                            </svg>
                            Seleccionar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>1</td>
                <td>000001</td>
                <td>sample text</td>
                <td>
                    <a asp-action="AddBreed" class="btn w-100 h-100 align-content-center bg-transparent">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                            <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52z"/>
                        </svg>
                        Seleccionar
                    </a>
                </td>
            </tr>
            <tr>
                <td colspan="4" class="text-center">No se encontraron mas razas.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}