@{
    ViewData["Title"] = "Home Page";
}

<div style="position: absolute; top: 60px; left: 20px; color: white; opacity: 0.6; font-size: 1em;">
    <span id="liveClock"></span>
</div>

<div class="row align-items-center" style="min-height: 60vh;">
    <div class="col-md-6 offset-md-1">
        <div class="description-container p-4 rounded">
            <h2 class="mb-3" style="font-family: 'Boogaloo', cursive; font-size: 3.5em; text-transform: uppercase; font-weight: 400; color: white;">¡BIENVENIDOS A ASPNETVET!</h2>
            <p class="lead" style="color: white;">
                Nuestra aplicación de gestión veterinaria está diseñada para facilitar la administración de tu clínica,
                permitiéndote gestionar usuarios, inventario, citas y mucho más de manera eficiente.
                ¡Optimiza tu flujo de trabajo y brinda la mejor atención a tus pacientes!
            </p>
        </div>
    </div>
    <div class="col-md-4 offset-md-1 d-none d-md-block">
        <img src="/resources/white_dog.png" alt="Ilustración Veterinaria" class="img-fluid rounded" style="max-width: 120%; height: auto; margin-left: -100px;" />
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="carousel-container p-4" style="background-color: rgba(255, 255, 255, 0.6);">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="d-flex justify-content-around" style="height: 115%;">
                            <div class="card text-center h-100" style="width: 31%;">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center h-100">
                                    <img src="/resources/blue_dog.png" alt="Usuarios Icon" style="max-width: 58px; margin-bottom: 10px;">
                                    <h5 class="card-title">Usuarios</h5>
                                    <p class="card-text">Gestiona los usuarios del sistema, veterinarios y clientes.</p>
                                    <a asp-area="" asp-controller="Users" asp-action="Index" class="btn btn-outline-primary">Ver Usuarios</a>
                                </div>
                            </div>
                            <div class="card text-center h-100" style="width: 31%;">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center h-100">
                                    <img src="/resources/dog_main.png" alt="Inventario Icon" style="max-width: 58px; margin-bottom: 10px;">
                                    <h5 class="card-title">Inventario</h5>
                                    <p class="card-text">Administra los productos, medicinas y el kardex de tu inventario.</p>
                                    <a asp-area="" asp-controller="Inventory" asp-action="Index" class="btn btn-outline-success">Ver Inventario</a>
                                </div>
                            </div>
                            <div class="card text-center h-100" style="width: 31%;">
                                <div class="card-body d-flex flex-column align-items-center justify-content-center h-100">
                                    <img src="/resources/light_blue_dog.png" alt="Citas Icon" style="max-width: 58px; margin-bottom: 10px;">
                                    <h5 class="card-title">Citas</h5>
                                    <p class="card-text">Organiza y gestiona las citas de tus pacientes con precisión.</p>
                                    <a asp-area="" asp-controller="Appointments" asp-action="Index" class="btn btn-outline-info">Ver Citas</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* La importación de la fuente Atma debería estar en site.css */

    .description-container {
        max-width: 500px;
        background-color: rgba(0, 0, 0, 0.3); /* Fondo oscuro más transparente para el texto blanco */
    }

    .carousel-container {
        box-shadow: none; /* Eliminar la sombra del carrusel */
    }

    .carousel-item > div {
        display: flex !important; /* Ensure cards are in a row */
        justify-content: space-around; /* Distribute cards evenly */
        align-items: stretch; /* Estirar las tarjetas para que tengan la misma altura */
        height: 115%; /* Asegura que el contenedor interno ocupe toda la altura del carousel-item */
    }

    .card {
        flex: 0 0 auto; /* Don't grow, don't shrink, base width auto */
        width: 31%; /* Ajuste ligero del ancho para compensar el aumento de altura */
        display: flex; /* Asegura que la tarjeta ocupe toda la altura del contenedor flex */
        flex-direction: column; /* Alinea el contenido verticalmente */
    }

    .card-body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 115%; /* Ocupa toda la altura de la tarjeta */
    }
</style>

<script>
    function updateClock() {
        var now = new Date();
        var year = now.getFullYear();
        var month = (now.getMonth() + 1).toString().padStart(2, '0');
        var day = now.getDate().toString().padStart(2, '0');
        var hours = now.getHours().toString().padStart(2, '0');
        var minutes = now.getMinutes().toString().padStart(2, '0');
        var seconds = now.getSeconds().toString().padStart(2, '0');
        var dateTimeString = day + '/' + month + '/' + year + ' ' + hours + ':' + minutes + ':' + seconds;
        document.getElementById("liveClock").textContent = dateTimeString;
    }

    setInterval(updateClock, 1000); // Update every second
    updateClock(); // Initial call to display immediately
</script>