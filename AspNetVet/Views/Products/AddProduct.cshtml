@{
	ViewData["Title"] = "Agregar Productos";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-sm text-center">
			<h1 class="lblSearch">
				Agregar Productos
			</h1>
		</div>
	</div>
</div>
<br/>
<br/>
<form action="/" method="post">
	<div class="formAddMod">
		<div class="form-group row">
			<div class="col-sm-1">
				<label class="formText" for="codigo"> Código: </label>
			</div>
			<div class="col-sm-3">
				<input type="text" class="form-control" name="codigo" id="codigo"/>
			</div>

			<div class="col-sm-1">
				<label class="formText" for="nombre"> Nombre: </label>
			</div>
			<div class="col-sm-7">
				<input type="text" class="form-control" name="nombre" id="nombre"/>
			</div>
		</div>
		<br />

		<div class="form-group row">
			<div class="col-sm-1">
				<label class="formText" for="proveedor"> Proveedor: </label>
			</div>
			<div class="col-sm-5">
				<input type="text" class="form-control" name="proveedor" id="proveedor"/>
			</div>
			<div class="col-sm-2">
				<a class="btn btn-info mb-2 w-100" id="BuscarProv" asp-action="GetProductSupplier"> Buscar </a>
			</div>

			<div class="col-sm-1">
				<label class="formText" for="precio"> Precio: </label>
			</div>
			<div class="col-sm-3">
				<input type="number" class="form-control" name="precio" id="precio"/>
			</div>
		</div>

		<br />

		<div class="form-group row">
			<div class="col-sm-1">
				<label for="txaDesc" class="formText">Descripción:</label>
			</div>
			<div class="col-sm-7">
				<textarea class="form-control" id="txaDesc" name="txaDesc" rows="5"></textarea>
			</div>
			<div class="col-sm-1">
				<label class="formText" for="tipoProd">Tipo de producto:</label>
				<br/> <br/>
				<label class="formText" for="txtStock">Stock:</label>
			</div>
			<div class="col-sm-3">
				<select class="form-control" id="tipoProd" name="tipoProd">
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
				</select>
				<br/> <br/>
				<input type="number" class="form-control" name="txtStock" id="txtStock"/>
			</div>
		</div>
		<br />
		<div class="form-group row">
			<div class="col-sm-1"></div>
			<div class="col-sm-2">
				<label for="txtStockMin" class="formText">Stock (Mínimo):</label>
			</div>
			<div class="col-sm-2">
				<input type="number" class="form-control" name="txtStockMin" id="txtStockMin" />
			</div>
			<div class="col-sm-2"></div>
			<div class="col-sm-2">
				<label for="txtStockMax" class="formText">Stock (Máximo):</label>
			</div>
			<div class="col-sm-2">
				<input type="number" class="form-control" name="txtStockMax" id="txtStockMax" />
			</div>
		</div>
		<br />
		<br />
	</div>
	<div class="bottom-buttons">
		<div class="row w-100 d-flex">
			<div class="col-sm-3"></div>
			<div class="col-sm-5 w-25">
				<a asp-action="Index" class="btn btn-danger w-100 h-100 align-content-center">Regresar</a>
			</div>
			<div class="col-sm-1"></div>
			<div class="col-sm-5 w-25">
				<a asp-action="Index" class="btn btn-success w-100 h-100 align-content-center">Agregar</a>
			</div>
			<div class="col-sm-3"></div>
		</div>
	</div>
</form>