@model IEnumerable<AspNetVet.Models.AppUsers>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">Usuarios</h1>
        </div>
    </div>
</div>

<br />
<br />

<div class="container-fluid">
    <!-- Search Section -->
    <div class="row mb-3">
        <div class="col-md-1">
            <label class="lblSearch">Buscar:</label>
        </div>
        <div class="col-md-5">
            <input type="text" id="search" class="form-control" placeholder="Usuario" />
        </div>
        <div class="col-md-2">
            <select id="breed" class="form-control">
                <option value="">Todas</option>
                <option value="1">Nombre</option>
                <option value="2">Correo</option>
                <option value="3">Cargo</option>
            </select>
        </div>
        <div class="col-md-2">
            <button id="searchBtn" class="btn btn-primary w-100">Buscar</button>
        </div>
        <div class="col-md-2">
            <a asp-action="AddUser" class="btn btn-success w-100" id="addButton">Agregar</a>
        </div>
    </div>

    <!-- Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="petsTable" class="table table-bordered">
                    <thead>
                        <tr class="text-center" style="background-color: #8954a8; color: white;">
                            <th>Id</th>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Cargo</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td class="text-center">@user.Id</td>
                                    <td class="text-center">@user.Code</td>
                                    <td class="text-center">@user.FullName</td>
                                    <td class="text-center">@user.Email</td>
                                    <td class="text-center">@user.Phone</td>
                                    <td class="text-center">@user.Roles</td>
                                    <td class="text-center">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-link p-0 mx-1" style="color: black">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                                <path d="..." /> <!-- SVG path unchanged for brevity -->
                                            </svg>
                                        </a>
                                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-link p-0 mx-1" style="color: black" onclick="return confirm('¿Está seguro de que desea borrar este usuario?')">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="..." /> <!-- SVG path unchanged for brevity -->
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No se encontraron usuarios.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="Eliminar elemento" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #eeebf8;">
                    <h5 class="lblSearch">Eliminar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Desea eliminar este elemento?</p>
                </div>
                <div class="modal-footer d-flex flex-row align-content-center" style="background-color: #eeebf8;">
                    <a class="btn btn-warning flex-grow-1 h-100" data-bs-dismiss="modal">Regresar</a>
                    <a class="btn btn-danger flex-grow-1 h-100" id="btnDelete" data-bs-dismiss="modal">Eliminar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #petsTable {
        border-collapse: collapse;
        width: 100%;
        margin-top: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        #petsTable thead tr {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        #petsTable th, #petsTable td {
            text-align: center;
            border: 1px solid #ddd;
            padding: 8px;
            vertical-align: middle;
        }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 0.375rem 0.75rem;
    }

    #searchBtn {
        background-color: #7579E7;
        border-color: #7579E7;
    }

    #addButton {
        background-color: #7CFC00;
        border-color: #7CFC00;
        color: #333;
    }
</style>
