@model AspNetVet.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Estilos para el contenedor semitransparente */
    .semi-transparent-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        margin-bottom: 20px;
        max-width: 960px; 
        margin-left: auto; 
        margin-right: auto; 
    }

    .lblSearch {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-actualizar {
        background-color: #007bff; /* Azul */
        border-color: #007bff;
        border-radius: 6px;
        color: white;
    }

    .btn-regresar {
        background-color: #dc3545; /* Rojo */
        border-color: #dc3545;
        border-radius: 6px;
        color: white;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
        border-radius: 5px;
        padding: 10px;
        margin-top: 15px;
        text-align: center;
    }

    .popup-container {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        text-align: center;
    }

    .popup-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 15px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Editar Proveedor
            </h1>
        </div>
    </div>
</div>

<div class="container-fluid semi-transparent-container">
    <form id="editProveedorForm" asp-action="UpdateProveedor" method="post">
        @* Campo oculto para el Id del proveedor *@
        <input type="hidden" asp-for="Id" />

        <div class="row mb-3">
            <div class="col-md-3">
                <label for="Codigo" class="lblSearch">Código:</label>
                <input type="text" class="form-control" id="Codigo" asp-for="Codigo" placeholder="Ingrese el código">
            </div>
            <div class="col-md-9">
                <label for="Nombre" class="lblSearch">Nombre del proveedor:</label>
                <input type="text" class="form-control" id="Nombre" asp-for="Nombre" placeholder="Ingrese el nombre del proveedor">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="Telefono" class="lblSearch">Teléfono:</label>
                <input type="text" class="form-control" id="Telefono" asp-for="Telefono" placeholder="Ingrese el teléfono">
            </div>
            <div class="col-md-9">
                <label for="Contacto" class="lblSearch">Nombre del contacto:</label>
                <input type="text" class="form-control" id="Contacto" asp-for="Contacto" placeholder="Ingrese el nombre del contacto">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="Correo" class="lblSearch">Correo:</label>
                <input type="email" class="form-control" id="Correo" asp-for="Correo" placeholder="Ingrese el correo electrónico">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="Provincia" class="lblSearch">Provincia:</label>
                <select class="form-control" id="Provincia" asp-for="Provincia" asp-items="@ViewBag.Provincias">
                    <option value="">Seleccione una provincia</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="Distrito" class="lblSearch">Distrito:</label>
                <select class="form-control" id="Distrito" asp-for="Distrito" asp-items="@ViewBag.Distritos">
                    <option value="">Seleccione un distrito</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="Canton" class="lblSearch">Cantón:</label>
                <select class="form-control" id="Canton" asp-for="Canton" asp-items="@ViewBag.Cantones">
                    <option value="">Seleccione un cantón</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="Direccion" class="lblSearch">Dirección:</label>
                <textarea class="form-control" id="Direccion" asp-for="Ubicacion" rows="3" placeholder="Ingrese la dirección"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-actualizar w-100" id="btnActualizarProveedor">Actualizar</button>
            </div>
            <div class="col-md-3">
                <a asp-action="Index" class="btn btn-regresar w-100">Regresar</a>
            </div>
        </div>
    </form>

    <div id="mensajeGuardado" class="alert alert-success mt-3" style="display:none;">
        Proveedor actualizado exitosamente.
    </div>

    <div id="popupGuardado" class="popup-container">
        <p>Información actualizada satisfactoriamente.</p>
        <button type="button" class="popup-button" id="btnOkPopup">OK</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#btnActualizarProveedor").click(function (event) {
            event.preventDefault(); 

            // Simulación de la actualización exitosa 
            // Por ahora, solo limpiamos el formulario
            $("#editProveedorForm")[0].reset(); // Limpia el formulario
            $("#popupGuardado").fadeIn();
        });

        $("#btnOkPopup").click(function () {
            $("#popupGuardado").fadeOut();
        });
    });
</script>