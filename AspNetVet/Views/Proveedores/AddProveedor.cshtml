@{
    ViewData["Title"] = "Agregar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .semi-transparent-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        margin-bottom: 20px;
        max-width: 960px; 
        margin-left: auto; 
        margin-right: auto; 
    }

    .lblSearch {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-guardar {
        background-color: #28a745; /* Verde */
        border-color: #28a745;
        border-radius: 6px;
        color: white;
    }

    .btn-regresar {
        background-color: #dc3545; /* Rojo */
        border-color: #dc3545;
        border-radius: 6px;
        color: white;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
        border-radius: 5px;
        padding: 10px;
        margin-top: 15px;
        text-align: center; /* Centrar el mensaje */
    }

    /* Estilos para el pop-up */
    .popup-container {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        text-align: center;
    }

    .popup-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 15px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Agregar Nuevo Proveedor
            </h1>
        </div>
    </div>
</div>

<div class="container-fluid semi-transparent-container">
    <form id="addProveedorForm">
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="Codigo" class="lblSearch">Código:</label>
                <input type="text" class="form-control" id="Codigo" name="Codigo" placeholder="Ingrese el código">
            </div>
            <div class="col-md-9">
                <label for="Nombre" class="lblSearch">Nombre del proveedor:</label>
                <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Ingrese el nombre del proveedor">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="Telefono" class="lblSearch">Teléfono:</label>
                <input type="text" class="form-control" id="Telefono" name="Telefono" placeholder="Ingrese el teléfono">
            </div>
            <div class="col-md-9">
                <label for="Contacto" class="lblSearch">Nombre del contacto:</label>
                <input type="text" class="form-control" id="Contacto" name="Contacto" placeholder="Ingrese el nombre del contacto">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="Correo" class="lblSearch">Correo:</label>
                <input type="email" class="form-control" id="Correo" name="Correo" placeholder="Ingrese el correo electrónico">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="Provincia" class="lblSearch">Provincia:</label>
                <select class="form-control" id="Provincia" name="Provincia" asp-items="@ViewBag.Provincias">
                    <option value="">Seleccione una provincia</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="Distrito" class="lblSearch">Distrito:</label>
                <select class="form-control" id="Distrito" name="Distrito" asp-items="@ViewBag.Distritos">
                    <option value="">Seleccione un distrito</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="Canton" class="lblSearch">Cantón:</label>
                <select class="form-control" id="Canton" name="Canton" asp-items="@ViewBag.Cantones">
                    <option value="">Seleccione un cantón</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="Direccion" class="lblSearch">Dirección:</label>
                <textarea class="form-control" id="Direccion" name="Direccion" rows="3" placeholder="Ingrese la dirección"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-guardar w-100" id="btnGuardarProveedor">Guardar</button>
            </div>
            <div class="col-md-3">
                <a asp-action="Index" class="btn btn-regresar w-100">Regresar</a>
            </div>
        </div>
    </form>

</div>

<script>
    $(document).ready(function () {
        $("#btnGuardarProveedor").click(function () {
            $("#addProveedorForm")[0].reset();
            $("#popupGuardado").fadeIn();
        });

        $("#btnOkPopup").click(function () {
            $("#popupGuardado").fadeOut();
        });
    });
</script>