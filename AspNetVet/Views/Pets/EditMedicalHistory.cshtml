@model AspNetVet.Models.Medical_History

@{
    ViewData["Title"] = "Editar Historial";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

        .main-nav li {
            padding: 10px 20px;
            position: relative;
            cursor: pointer;
        }
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .main-nav li:hover .dropdown-content {
        display: block;
    }

    .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-group {
        display: flex;
        margin-bottom: 20px;
        align-items: center;
    }

    .form-label {
        width: 150px;
        text-align: right;
        padding-right: 20px;
        font-weight: bold;
        color: #3c3c7b;
    }

    .form-field {
        flex: 1;
    }

        .form-field input, .form-field select, .form-field textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-field textarea {
            height: 120px;
        }
    .btn-add {
        background-color: #7ba3e0;
        color: white;
        border: none;
        padding: 8px 30px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-add:hover {
        color: white;
    }

    .form-section {
        margin-bottom: 20px;
    }

    .form-section-label {
        font-weight: bold;
        color: #3c3c7b;
        margin-bottom: 10px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Actualizar historial
            </h1>
        </div>
    </div>
</div>
<br/>
<br/>

<div class="form-container">
    <form asp-action="EditMedicalHistory" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Visit_Date" class="form-label">Fecha de visita:</label>
            <div class="form-field" style="max-width: 300px;">
                <input asp-for="Visit_Date" class="form-control" />
                <span asp-validation-for="Visit_Date" class="text-danger"></span>
            </div>

            <label asp-for="Height" class="form-label" style="margin-left: 30px;">Altura:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Pets" class="form-label">Mascota:</label>
            <div class="form-field" style="max-width: 630px;">
                <input asp-for="Pets" class="form-control" />
                <span asp-validation-for="Pets" class="text-danger"></span>
            </div>

            <label asp-for="Weight" class="form-label" style="margin-left: 30px;">Peso:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AppUsers" class="form-label">Dueño:</label>
            <div class="form-field" style="max-width: 630px;">
                <input asp-for="AppUsers" class="form-control" />
                <span asp-validation-for="AppUsers" class="text-danger"></span>
            </div>

            <label asp-for="Temperature" class="form-label" style="margin-left: 30px;">Temperatura:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Heart_Rate" class="form-label" style="margin-left: 30px;">Ritmo Cardiaco:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Heart_Rate" class="form-control" />
                <span asp-validation-for="Heart_Rate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Diagnosis" class="form-label">Diagnósticos:</label>
            <div class="form-field">
                <textarea asp-for="Diagnosis" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <div class="form-section-label">Tratamientos</div>
            <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                <a asp-action="AddMedicineTreatment" type="button" class="btn-add">Agregar</a>
            </div>
            <table id="TableModel" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Code</th>
                    <th>Tratamiento</th>
                    <th>Descripción</th>
                    <th>Opciones</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>2</td>
                    <td>000002</td>
                    <td>sample text</td>
                    <td>sample text</td>
                    <td>
                        <a class="btn btn-sm btn-link p-0 mx-1" style="color: black" asp-action="EditMedicineTreatment">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                            </svg>
                        </a>
                        <a class="btn btn-sm btn-link p-0 mx-1" style="color: black" data-bs-toggle="modal" data-bs-target="#modalEliminar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                            </svg>
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="Eliminar elemento" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: #eeebf8;">
                        <h5 class="lblSearch">Eliminar</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="w-100">
                                <p>¿Desea eliminar este elemento?</p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer d-flex flex-row align-content-center" style="background-color: #eeebf8;">
                        <a class="btn btn-warning flex-grow-1 h-100" id="btnRegresarDel" data-bs-dismiss="modal">Regresar</a>
                        <a class="btn btn-danger flex-grow-1 h-100" id="btnDelete" data-bs-dismiss="modal">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Notes" class="form-label">Anotaciones:</label>
            <div class="form-field">
                <textarea asp-for="Notes" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>

        <div class="bottom-buttons">
            <div class="row w-100 d-flex">
                <div class="col-sm-3"></div>
                <div class="col-sm-5 w-25">
                    <a asp-action="GetMedicalHistory" class="btn btn-danger w-100 h-100 align-content-center">Regresar</a>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-5 w-25">
                    <a asp-action="GetMedicalHistory" class="btn btn-warning w-100 h-100 align-content-center">Actualizar</a>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}