@model AspNetVet.Models.Medicine_Treatments

@{
    ViewData["Title"] = "Agregar Tratamiento";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .logo {
        font-size: 32px;
        font-weight: bold;
        color: #3c3c7b;
        margin-left: 30px;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

    .main-nav {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .main-nav li {
            padding: 10px 20px;
            position: relative;
            cursor: pointer;
        }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #ffffff;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.1);
        z-index: 1;
        left: 0;
        top: 100%;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .main-nav li:hover .dropdown-content {
        display: block;
    }

    .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-group {
        display: flex;
        margin-bottom: 20px;
        align-items: flex-start;
    }

    .form-label {
        width: 150px;
        text-align: right;
        padding-right: 20px;
        font-weight: bold;
        color: #3c3c7b;
        padding-top: 8px;
    }

    .form-field {
        flex: 1;
    }

        .form-field input, .form-field select, .form-field textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-field textarea {
            height: 120px;
        }

    .bottom-buttons {
        display: flex;
        justify-content: space-between;
        padding: 20px 0;
        background-color: #eeebf8;
        position: fixed;
        bottom: 0;
        width: 100%;
        left: 0;
        padding: 20px;
    }

    .btn-regresar {
        background-color: #e79a9a;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-editar-tratamiento {
        background-color: lightsalmon;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-agregar {
        background-color: #7ba3e0;
        color: white;
        border: none;
        padding: 8px 30px;
        border-radius: 5px;
        cursor: pointer;
    }

    .buttons-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .medicines-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .medicines-table th, .medicines-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .medicines-table th {
            background-color: #f8f9fa;
        }

    .icon-button {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
    }

    .section-label {
        font-weight: bold;
        color: #3c3c7b;
        margin-bottom: 10px;
        padding-left: 0;
        padding-top: 8px;
    }
</style>

<form asp-action="Create" method="post">
    <div class="form-container">
        <div class="form-group">
            <label class="form-label" asp-for="Treatment_Date">Fecha y hora:</label>
            <div class="form-field" style="max-width: 300px;">
                <input type="datetime-local" asp-for="Treatment_Date" />
                <span asp-validation-for="Treatment_Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Description">Descripción:</label>
            <div class="form-field">
                <textarea asp-for="Description" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-field">
                <label class="section-label">Medicinas:</label>
                <div class="mt-2">
                    <button type="button" class="btn-agregar">Agregar</button>
                </div>
                <table class="medicines-table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Code</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- This would typically be populated dynamically -->
                        <tr>
                            <td>
                                <input type="hidden" name="Medicines[0].Medicines_Id" value="2" />
                                2
                            </td>
                            <td>000002</td>
                            <td>sample text</td>
                            <td>sample text</td>
                            <td>
                                <button type="button" class="icon-button" onclick="removeMedicine(this)">🗑️</button>
                                <button type="button" class="icon-button" onclick="viewMeidcine(this)">👁️</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Hidden fields for related entities -->
        <input type="hidden" asp-for="Pets_Id" />
        <input type="hidden" asp-for="AppUsers_Id" />
        <input type="hidden" asp-for="Status" value="true" />
    </div>

    <div class="bottom-buttons">
        <div class="buttons-container">
            <button type="button" class="btn-regresar">Regresar</button>
            <button type="submit" class="btn-editar-tratamiento">Editar</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}