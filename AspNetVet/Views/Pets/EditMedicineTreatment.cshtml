@model AspNetVet.Models.Medicine_Treatments

@{
    ViewData["Title"] = "Agregar Tratamiento";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .logo {
        font-size: 32px;
        font-weight: bold;
        color: #3c3c7b;
        margin-left: 30px;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

    .main-nav {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .main-nav li {
            padding: 10px 20px;
            position: relative;
            cursor: pointer;
        }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #ffffff;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.1);
        z-index: 1;
        left: 0;
        top: 100%;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .main-nav li:hover .dropdown-content {
        display: block;
    }

    .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-group {
        display: flex;
        margin-bottom: 20px;
        align-items: flex-start;
    }

    .form-label {
        width: 150px;
        text-align: right;
        padding-right: 20px;
        font-weight: bold;
        color: #3c3c7b;
        padding-top: 8px;
    }

    .form-field {
        flex: 1;
    }

        .form-field input, .form-field select, .form-field textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-field textarea {
            height: 120px;
        }

    .bottom-buttons {
        display: flex;
        justify-content: space-between;
        padding: 20px 0;
        background-color: #eeebf8;
        position: fixed;
        bottom: 0;
        width: 100%;
        left: 0;
        padding: 20px;
    }

    .btn-regresar {
        background-color: #e79a9a;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-editar-tratamiento {
        background-color: lightsalmon;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-agregar {
        background-color: #7ba3e0;
        color: white;
        border: none;
        padding: 8px 30px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-agregar:hover {
        color: white;
    }

    .buttons-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .medicines-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .medicines-table th, .medicines-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .medicines-table th {
            background-color: #f8f9fa;
        }

    .icon-button {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
    }

    .section-label {
        font-weight: bold;
        color: #3c3c7b;
        margin-bottom: 10px;
        padding-left: 0;
        padding-top: 8px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Editar tratamiento
            </h1>
        </div>
    </div>
</div>
<br/>
<br/>

<form asp-action="Create" method="post">
    <div class="form-container">
        <div class="form-group">
            <label class="form-label" asp-for="Treatment_Date">Fecha y hora:</label>
            <div class="form-field" style="max-width: 300px;">
                <input type="datetime-local" asp-for="Treatment_Date" />
                <span asp-validation-for="Treatment_Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Description">Descripción:</label>
            <div class="form-field">
                <textarea asp-for="Description" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-field">
                <label class="section-label">Medicinas:</label>
                <div class="mt-2">
                    <a asp-action="GetMedicineTreatment" class="btn-agregar">Agregar</a>
                </div>
                <table class="medicines-table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Code</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- This would typically be populated dynamically -->
                    <tr>
                        <td>
                            <input type="hidden" name="Medicines[0].Medicines_Id" value="2" />
                            2
                        </td>
                        <td>000002</td>
                        <td>sample text</td>
                        <td>sample text</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-link p-0 mx-1" style="color: black" onclick="viewMeidcine(this)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                </svg>
                            </a>
                            <a class="btn btn-sm btn-link p-0 mx-1" style="color: black" data-bs-toggle="modal" data-bs-target="#modalEliminar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="Eliminar elemento" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: #eeebf8;">
                        <h5 class="lblSearch">Eliminar</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="w-100">
                                <p>¿Desea eliminar este elemento?</p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer d-flex flex-row align-content-center" style="background-color: #eeebf8;">
                        <a class="btn btn-warning flex-grow-1 h-100" id="btnRegresarDel" data-bs-dismiss="modal">Regresar</a>
                        <a class="btn btn-danger flex-grow-1 h-100" id="btnDelete" data-bs-dismiss="modal">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hidden fields for related entities -->
        <input type="hidden" asp-for="Pets_Id" />
        <input type="hidden" asp-for="AppUsers_Id" />
        <input type="hidden" asp-for="Status" value="true" />
    </div>

    <div class="bottom-buttons">
        <div class="row w-100 d-flex">
            <div class="col-sm-3"></div>
            <div class="col-sm-5 w-25">
                <a asp-action="AddMedicalHistory" class="btn btn-danger w-100 h-100 align-content-center">Regresar</a>
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-5 w-25">
                <a asp-action="AddMedicalHistory" class="btn btn-success w-100 h-100 align-content-center">Agregar</a>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}