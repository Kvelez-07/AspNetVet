@model AspNetVet.Models.Medical_History

@{
    ViewData["Title"] = "Nuevo Historial";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .logo {
        font-size: 32px;
        font-weight: bold;
        color: #3c3c7b;
        margin-left: 30px;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

    .main-nav {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .main-nav li {
            padding: 10px 20px;
            position: relative;
            cursor: pointer;
        }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #ffffff;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.1);
        z-index: 1;
        left: 0;
        top: 100%;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .main-nav li:hover .dropdown-content {
        display: block;
    }

    .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-group {
        display: flex;
        margin-bottom: 20px;
        align-items: center;
    }

    .form-label {
        width: 150px;
        text-align: right;
        padding-right: 20px;
        font-weight: bold;
        color: #3c3c7b;
    }

    .form-field {
        flex: 1;
    }

        .form-field input, .form-field select, .form-field textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-field textarea {
            height: 120px;
        }

    .search-button {
        background-color: #8989f3;
        color: white;
        border: none;
        padding: 8px 30px;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 10px;
    }

    .bottom-buttons {
        display: flex;
        justify-content: space-between;
        padding: 20px 0;
        background-color: #eeebf8;
        position: fixed;
        bottom: 0;
        width: 100%;
        left: 0;
        padding: 20px;
    }

    .btn-regresar {
        background-color: #e79a9a;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-agregar {
        background-color: #92ec92;
        color: black;
        border: none;
        padding: 10px 50px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-add {
        background-color: #7ba3e0;
        color: white;
        border: none;
        padding: 8px 30px;
        border-radius: 5px;
        cursor: pointer;
    }

    .buttons-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .treatment-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .treatment-table th, .treatment-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .treatment-table th {
            background-color: #f8f9fa;
        }

    .icon-button {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
    }

    .form-section {
        margin-bottom: 20px;
    }

    .form-section-label {
        font-weight: bold;
        color: #3c3c7b;
        margin-bottom: 10px;
    }
</style>

<div class="form-container">
    <form asp-action="AddToMedicalHistory" method="post">
        <div class="form-group">
            <label asp-for="Visit_Date" class="form-label">Fecha de visita:</label>
            <div class="form-field" style="max-width: 300px;">
                <input asp-for="Visit_Date" class="form-control" />
                <span asp-validation-for="Visit_Date" class="text-danger"></span>
            </div>

            <label asp-for="Height" class="form-label" style="margin-left: 30px;">Altura:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Pets" class="form-label">Mascota:</label>
            <div class="form-field" style="max-width: 630px;">
                <input asp-for="Pets" class="form-control" />
                <span asp-validation-for="Pets" class="text-danger"></span>
            </div>

            <label asp-for="Weight" class="form-label" style="margin-left: 30px;">Peso:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AppUsers" class="form-label">Dueño:</label>
            <div class="form-field" style="max-width: 630px;">
                <input asp-for="AppUsers" class="form-control" />
                <span asp-validation-for="AppUsers" class="text-danger"></span>
            </div>

            <label asp-for="Temperature" class="form-label" style="margin-left: 30px;">Temperatura:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Temperature" class="form-control" />
                <span asp-validation-for="Temperature" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Heart_Rate" class="form-label" style="margin-left: 30px;">Ritmo Cardiaco:</label>
            <div class="form-field" style="max-width: 200px;">
                <input asp-for="Heart_Rate" class="form-control" />
                <span asp-validation-for="Heart_Rate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Diagnosis" class="form-label">Diagnósticos:</label>
            <div class="form-field">
                <textarea asp-for="Diagnosis" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <div class="form-section-label">Tratamientos</div>
            <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                <button type="button" class="btn-add">Agregar</button>
            </div>
            <table class="treatment-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Code</th>
                        <th>Tratamiento</th>
                        <th>Descripción</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2</td>
                        <td>000002</td>
                        <td>sample text</td>
                        <td>sample text</td>
                        <td>
                            <button class="icon-button">✏️</button>
                            <button class="icon-button">🗑️</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <label asp-for="Notes" class="form-label">Anotaciones:</label>
            <div class="form-field">
                <textarea asp-for="Notes" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>

        <div class="bottom-buttons">
            <div class="buttons-container">
                <a asp-action="GetMedicalHistory" class="btn-regresar">Regresar</a>
                <button type="submit" class="btn-agregar">Agregar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}