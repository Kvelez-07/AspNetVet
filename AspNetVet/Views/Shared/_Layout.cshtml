<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetVet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspNetVet.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Boogaloo&display=swap" rel="stylesheet">
    
    <style>
        body {
            background-image: url('/resources/bk_image.jpg'); /* Asegúrate de que la ruta sea correcta */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            margin: 0;
            display: flex; /* Para el sticky footer */
            flex-direction: column; /* Para el sticky footer */
        }

        .container-fluid {
            flex-grow: 1; /* Para el sticky footer */
            padding: 0; /* O ajusta según necesites */
        }

        main {
            padding-bottom: 60px; /* Ajusta según la altura de tu footer */
        }

        footer {
            height: 60px; /* Altura de tu footer */
            margin-top: auto; /* Para el sticky footer */
            background-color: #f8f9fa; /* Un fondo para el footer */
            text-align: center;
            line-height: 60px;
        }

        /* Alejar el logo del margen izquierdo */
        .navbar-brand {
            margin-left: 15px; /* Ajusta este valor según el espacio que necesites */
        }

        /* Agregar padding izquierdo al contenedor del navbar */
        .navbar-collapse {
            padding-left: 20px; /* Ajusta este valor según el espacio que necesites */
        }

        /* Efecto hover para los enlaces del navbar */
        .navbar-nav .nav-link:hover {
            background-color: rgba(0, 0, 0, 0.05); /* Un ligero fondo gris al pasar el cursor */
            color: #000000 !important; /* Cambia el color del texto al azul primario */
            font-weight: bold !important; /* Pone el texto en negrita */
            border-radius: 5px; /* Opcional: bordes redondeados para el efecto */
        }

        /* Efecto hover para los dropdown-toggle (si quieres un efecto diferente) */
        .navbar-nav .dropdown-toggle:hover {
            background-color: rgba(0, 0, 0, 0.05);
            color: #000000 !important;
            font-weight: bold !important; /* Pone el texto en negrita */
            border-radius: 5px;
        }

        /* Efecto hover para los items del dropdown */
        .dropdown-menu .dropdown-item:hover {
            background-color: #f8f9fa; /* Un fondo gris claro al pasar el cursor */
            color: #212529; /* Restaura el color del texto o usa uno diferente */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AspNetVet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownUsuarios" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Usuarios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownUsuarios">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">Usuarios</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Veterinarians" asp-action="Index">Veterinarios</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index">Clientes</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownMascotas" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mascotas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMascotas">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Pets" asp-action="Index">Mascotas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Species" asp-action="Index">Especies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Breeds" asp-action="Index">Raza</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Proveedores" asp-action="Index">Proveedores</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownCitas" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Citas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownCitas">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Index">Citas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Request">Solicitud</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="InProcess">En proceso</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Completed">Finalizadas</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownInventario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Inventario
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownInventario">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Productos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Medicines" asp-action="Index">Medicinas</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sales" asp-action="Index">Ventas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid m-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - AspNetVet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>