<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetVet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspNetVet.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#eee8fd border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AspNetVet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Dropdown for Usuarios -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownUsuarios" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Usuarios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownUsuarios">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">Usuarios</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Veterinarians" asp-action="Index">Veterinarios</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index">Clientes</a></li>
                            </ul>
                        </li>
                        <!-- Dropdown for Mascotas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownMascotas" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mascotas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMascotas">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Pets" asp-action="Index">Mascotas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Species" asp-action="Index">Especies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Breeds" asp-action="Index">Raza</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Suppliers" asp-action="Index">Proveedores</a>
                        </li>
                        <!-- Dropdown for Citas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownCitas" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Citas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownCitas">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Index">Citas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Request">Solicitud</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="InProcess">En proceso</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Appointments" asp-action="Completed">Finalizadas</a></li>
                            </ul>
                        </li>
                        <!-- Dropdown for Inventario -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownInventario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Inventario
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownInventario">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Productos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Medicines" asp-action="Index">Medicinas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Inventory" asp-action="Index">Kardex</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sales" asp-action="Index">Ventas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid m-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
