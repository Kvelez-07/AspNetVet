@model IEnumerable<AspNetVet.Models.Suppliers>

@{
    ViewData["Title"] = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .semi-transparent-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .container-fluid {
        padding: 15px;
    }

    .lblSearch {
        font-weight: bold;
        color: #ffffff;
    }

    #searchProveedor {
        border-radius: 20px;
        padding: 8px 15px;
        border: 1px solid #ccc;
    }

    #searchProveedorBtn {
        background-color: #6f42c1;
        border-color: #6f42c1;
        border-radius: 6px;
    }

    #addProveedorBtn {
        background-color: #8CE063;
        color: #000;
        border-color: #8CE063;
        border-radius: 6px;
    }

    #proveedoresTable {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ccc;
        background-color: white;
    }

        #proveedoresTable thead tr {
            background-color: #8954a8;
            color: white;
            text-transform: capitalize;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        #proveedoresTable th {
            font-weight: normal;
            padding: 10px;
            text-align: center;
            border: 1px solid #8954a8;
        }

        #proveedoresTable td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: center;
        }

        #proveedoresTable tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #proveedoresTable thead {
            filter: drop-shadow(0 4px 3px rgba(0, 0, 0, 0.15));
        }

    .btn-link {
        color: #333;
    }

        .btn-link:hover {
            color: #8954a8;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">Proveedores</h1>
        </div>
    </div>
</div>

<div class="container-fluid semi-transparent-container">
    <div class="row mb-3 align-items-end">
        <div class="col-md-1">
            <label class="lblSearch">Buscar:</label>
        </div>
        <div class="col-md-6">
            <input type="text" id="searchProveedor" class="form-control rounded-1" placeholder="Código / Nombre" />
        </div>
        <div class="col-md-2">
            <button id="searchProveedorBtn" class="btn btn-primary w-100">Buscar</button>
        </div>
        <div class="col-md-3">
            <a asp-action="AddSupplier" class="btn w-100" id="addProveedorBtn">Agregar proveedor</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive table-hover">
                <table id="proveedoresTable" class="table table-bordered">
                    <thead>
                        <tr class="text-center">
                            <th class="px-3 py-2">Id</th>
                            <th class="px-3 py-2">Código</th>
                            <th class="px-3 py-2">Nombre</th>
                            <th class="px-3 py-2">Contacto</th>
                            <th class="px-3 py-2">Teléfono</th>
                            <th class="px-3 py-2">Ubicación</th>
                            <th class="px-3 py-2">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var proveedor in Model)
                            {
                                <tr>
                                    <td>@proveedor.Id</td>
                                    <td>@proveedor.Code</td>
                                    <td>@proveedor.Supplier_Name</td>
                                    <td>@proveedor.Contact_Name</td>
                                    <td>@proveedor.Phone</td>
                                    <td>
                                        @($"{proveedor.Province}, {proveedor.Canton}, {proveedor.District}")
                                    </td>
                                    <td>
                                        <a asp-action="EditSupplier" asp-route-id="@proveedor.Id" class="btn btn-sm btn-link p-0 mx-1" style="color: black">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                            </svg>
                                        </a>
                                        <a class="btn btn-sm btn-link p-0 mx-1" data-bs-toggle="modal" data-bs-target="#modalEliminarProveedor" data-proveedor-id="@proveedor.Id" style="color: black">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No hay proveedores registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminarProveedor" tabindex="-1" aria-labelledby="Eliminar proveedor" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #eeebf8;">
                <h5 class="lblSearch">Eliminar Proveedor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Desea eliminar este proveedor?</p>
                <input type="hidden" id="proveedorIdToDelete" />
            </div>
            <div class="modal-footer d-flex flex-row align-content-center" style="background-color: #eeebf8;">
                <a class="btn btn-warning flex-grow-1 h-100" id="btnRegresarDelProveedor" data-bs-dismiss="modal">Regresar</a>
                <button class="btn btn-danger flex-grow-1 h-100" id="btnEliminarProveedor">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#modalEliminarProveedor').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var proveedorId = button.data('proveedor-id');
            $('#proveedorIdToDelete').val(proveedorId);
        });

        $('#btnEliminarProveedor').click(function () {
            var proveedorId = $('#proveedorIdToDelete').val();
            console.log("Eliminar proveedor con ID: " + proveedorId);
            $('#modalEliminarProveedor').modal('hide');
            // Implementar lógica de eliminación aquí
        });
    });
</script>
