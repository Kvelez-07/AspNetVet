@model IEnumerable<AspNetVet.Models.Medicines>

@{
    ViewData["Title"] = "Buscar medicinas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Buscar Medicinas
            </h1>
        </div>
    </div>
</div>

<div class="SearchBox">
    <form action="/" method="post" class="formSeach">
        <div class="row">
            <div class="col-md-2">
                <a class="btn btn-danger w-100" id="btnRegresar" asp-action="Index">Regresar</a>
            </div>
            <div class="col-md-1">
                <label class="lblSearch">
                    Buscar:
                </label>
            </div>
            <div class="col-md-7">
                <input type="text" class="px-4 form-control" name="busqueda" placeholder="Código / nombre" />
            </div>
            <div class="col-md-2">
                <a class="btn btn-info w-100" id="btnBuscar">Buscar</a>
            </div>
        </div>
    </form>
    <br />
</div>

<div class="container-fluid">
    <!-- Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="petsTable" class="table table-bordered table-hover">
                    <thead>
                    <tr class="text-center" style="background-color: #8954a8; color: white;">
                        <th class="px-3 py-2">Id</th>
                        <th class="px-3 py-2">Código</th>
                        <th class="px-3 py-2">Nombre</th>
                        <th class="px-3 py-2">Descripción</th>
                        <th class="px-3 py-2">Stock</th>
                        <th class="px-3 py-2">Precio</th>
                        <th class="px-3 py-2">Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var medicine in Model)
                        {
                            <tr>
                                <td class="text-center">@medicine.Id</td>
                                <td class="text-center">@medicine.Code</td>
                                <td class="text-center">@medicine.Name</td>
                                <td class="text-center">@medicine.Description</td>
                                <td class="text-center">@medicine.Stock</td>
                                <td class="text-center">@medicine.Price</td>
                                <td class="text-center">
                                    <a asp-action="Index" class="btn w-100 h-100 align-content-center bg-transparent">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                                            <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52z"/>
                                        </svg>
                                        Seleccionar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center">1</td>
                            <td class="text-center">000001</td>
                            <td>sample text</td>
                            <td>sample text</td>
                            <td>sample text</td>
                            <td>sample text</td>
                            <td class="text-center">
                                <a asp-action="Index" class="btn w-100 h-100 align-content-center bg-transparent">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                                        <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52z"/>
                                    </svg>
                                    Seleccionar
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="7" class="text-center">No se encontraron mas medicinas.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>