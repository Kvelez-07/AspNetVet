@model IEnumerable<AspNetVet.Models.Medicine_Types>

@{
    ViewData["Title"] = "Tipos de medicinas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Tipos de medicinas
            </h1>
        </div>
    </div>
</div>
<div class="SearchBox">
    <form action="/" method="post" class="formSeach">
        <div class="row">
            <div class="col-md-1">
                <label class="lblSearch">
                    Buscar:
                </label>
            </div>
            <div class="col-md-7">
                <input type="text" class="px-4 form-control" name="busqueda" placeholder="Código / nombre" />
            </div>
            <div class="col-md-2">
                <a class="btn btn-info w-100" id="btnBuscar">Buscar</a>
            </div>
            <div class="col-md-2">
                <a class="btn btn-success w-100" id="btnAgregarMedicina" asp-action="AddMedicineTypes">Agregar</a>
            </div>
        </div>
    </form>
    <br />
</div>

<div class="container-fluid">
    <!-- Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="petsTable" class="table table-bordered table-hover">
                    <thead>
                    <tr class="text-center" style="background-color: #8954a8; color: white;">
                        <th class="px-3 py-2">Id</th>
                        <th class="px-3 py-2">Código</th>
                        <th class="px-3 py-2">Nombre</th>
                        <th class="px-3 py-2">Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var type in Model)
                        {
                            <tr>
                                <td class="text-center">@type.Id</td>
                                <td class="text-center">@type.Code</td>
                                <td class="text-center">@type.Name</td>
                                <td class="text-center">
                                    <a type="button" class="rounded  m-1 p-0 border border-light bg-transparent" id="btnModProd1">
                                        <img src="~/resources/pen-img.jpeg" height="25px" width="25px" alt="Mod">
                                    </a>
                                    <a class="btn rounded m-1 p-0 border border-light bg-transparent" id="btnDelProd1">
                                        <img src="~/resources/trash-img.jpeg" height="25px" width="25px" alt="Del">
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center">1</td>
                            <td class="text-center">000001</td>
                            <td>sample text</td>
                            <td class="text-center">
                                <a type="button" class="rounded  m-1 p-0 border border-light bg-transparent" id="btnModProd1" asp-action="EditMedicineTypes">
                                    <img src="~/resources/pen-img.jpeg" height="25px" width="25px" alt="Mod">
                                </a>
                                <a class="btn rounded m-1 p-0 border border-light bg-transparent" id="btnDelProd1" onclick="return confirm('Desea borrar?')">
                                    <img src="~/resources/trash-img.jpeg" height="25px" width="25px" alt="Del">
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4" class="text-center">No se encontraron mas mascotas.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>