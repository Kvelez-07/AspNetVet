@model IEnumerable<AspNetVet.Models.Medicine_Types>

@{
    ViewData["Title"] = "Tipos de medicinas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Tipos de medicinas
            </h1>
        </div>
    </div>
</div>
<div class="SearchBox">
    <form action="/" method="post" class="formSeach">
        <div class="row">
            <div class="col-md-1">
                <label class="lblSearch">
                    Buscar:
                </label>
            </div>
            <div class="col-md-7">
                <input type="text" class="px-4 form-control" name="busqueda" placeholder="Código / nombre" />
            </div>
            <div class="col-md-2">
                <a class="btn btn-info w-100" id="btnBuscar">Buscar</a>
            </div>
            <div class="col-md-2">
                <a class="btn btn-success w-100" id="btnAgregarMedicina" asp-action="AddMedicineTypes">Agregar</a>
            </div>
        </div>
    </form>
    <br />
</div>

<div class="container-fluid">
    <!-- Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="TableModel" class="table table-bordered table-hover">
                    <thead>
                    <tr class="text-center" style="background-color: #8954a8; color: white;">
                        <th class="px-3 py-2">Id</th>
                        <th class="px-3 py-2">Código</th>
                        <th class="px-3 py-2">Nombre</th>
                        <th class="px-3 py-2">Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var type in Model)
                        {
                            <tr>
                                <td class="text-center">@type.Id</td>
                                <td class="text-center">@type.Code</td>
                                <td class="text-center">@type.Name</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-link p-0 mx-1" style="color: black" asp-action="EditMedicineTypes">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                                        </svg>
                                    </a>
                                    <a class="btn btn-sm btn-link p-0 mx-1" data-bs-toggle="modal" data-bs-target="#modalEliminar" style="color: black">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center">1</td>
                            <td class="text-center">000001</td>
                            <td>sample text</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-link p-0 mx-1" style="color: black" asp-action="EditMedicineTypes">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                                    </svg>
                                </a>
                                <a class="btn btn-sm btn-link p-0 mx-1" data-bs-toggle="modal" data-bs-target="#modalEliminar" style="color: black">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4" class="text-center">No se encontraron mas tipos de medicinas.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>}
<!-- Modal -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="Eliminar elemento" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #eeebf8;">
                <h5 class="lblSearch">Eliminar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="w-100">
                        <p>¿Desea eliminar este elemento?</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex flex-row align-content-center" style="background-color: #eeebf8;">
                <a class="btn btn-warning flex-grow-1 h-100" id="btnRegresarDel" data-bs-dismiss="modal">Regresar</a>
                <a class="btn btn-danger flex-grow-1 h-100" id="btnDelete" data-bs-dismiss="modal">Eliminar</a>
            </div>
        </div>
    </div>
</div>
<div class="bottom-buttons">
    <div class="row w-100 d-flex">
        <div class="col w-25"></div>
        <div class="col-sm-5 w-50">
            <a asp-action="Index" class="btn btn-danger w-100 h-100 align-content-center">Regresar</a>
        </div>
        <div class="col w-25"></div>
    </div>
</div>