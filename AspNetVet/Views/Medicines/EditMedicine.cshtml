@{
	ViewData["Title"] = "Actualizar Medicinas";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-sm text-center">
			<h1 class="lblSearch">
				Actualizar Medicinas
			</h1>
		</div>
	</div>
</div>
<br/>
<br/>
<form action="/" method="post">
	<div class="formAddMod">
		<div class="form-group row">
			<div class="col-sm-1" >
				<label for="codigo" class="formText"> Código: </label>
			</div>
			<div class="col-sm-3">
				<input type="text" class="form-control" name="codigo" id="codigo"/>
			</div>
			<div class="col-sm-1" >
				<label for="nombre" class="formText"> Nombre: </label>
			</div>
			<div class="col-sm-7">
				<input type="text" class="form-control" name="nombre" id="nombre"/>
			</div>
		</div>
		<br/>

		<div class="form-group row">
			<div class="col-sm-1" >
				<label for="proveedor" class="formText"> Proveedor: </label>
			</div>
			<div class="col-sm-5">
				<input type="text" class="form-control" name="proveedor" id="proveedor"/>
			</div>
			<div class="col-sm-2">
				<a class="btn btn-info mb-2 w-100" id="BuscarProv" asp-action=""> Buscar </a>
			</div>
			<div class="col-sm-1" >
				<label for="precio" class="formText"> Precio: </label>
			</div>
			<div class="col-sm-3">
				<input type="number" class="form-control" name="precio" id="precio"/>
			</div>
		</div>

		<br/>

		<div class="form-group row">
			<div class="col-sm-1" >
				<label for="txaDesc" class="formText">Descripción:</label>
			</div>
			<div class="col-sm-7">
				<textarea class="form-control" id="txaDesc" name="txaDesc" rows="5"></textarea>
			</div>
			<div class="col-sm-1">
				<label for="tipoProd" class="formText">Tipo de medicina:</label>
				<br/> <br/>
				<label for="txtStockMin" class="formText">Stock (Mínimo):</label>
			</div>
			<div class="col-sm-3">
				<select class="form-control" id="tipoProd" name="tipoProd">
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
				</select>
				<br/> <br/>
				<input type="number" class="form-control" name="txtStockMin" id="txtStockMin"/>
			</div>
		</div>
		<br/>
		<div class="form-group row">
			<div class="col-sm-8">
				<div class="card d-flex flex-row border-secondary">
					<div class="card-header w-auto border-bottom-0 align-content-center">
						<span class="formText">Gestión de inventario</span>
					</div>
					<div class="card-body d-flex flex-row h-100">
						<div class="col-md-6 p-0 pe-1">
							<a class="btn btn-success w-100 h-100" id="btnCreateEntry" asp-action="AddKardexEntry"> Ingreso </a>
						</div>
						<div class="col-md-6 p-0 ps-1">
							<a class="btn btn-danger w-100 h-100" id="btnCreateOutflow" asp-action="AddKardexOutflow"> Salida </a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-sm-1">
				<label for="txtStockMax" class="formText">Stock (Máximo):</label>
			</div>
			<div class="col-sm-3">
				<input type="number" class="form-control" name="txtStockMax" id="txtStockMax"/>
			</div>
		</div>
		<br/>
	</div>
	<div class=" form-group row h-100 p-2">
		<div class="col-sm-1"></div>
		<div class="col-sm-4">
			<a class="btn btn-danger btn-lg w-100 h-100 font-weight-bold" asp-action="Index">Regresar</a>
		</div>
		<div class="col-sm-2"></div>
		<div class="col-sm-4">
			<a class="btn btn-warning btn-lg w-100 h-100 font-weight-bold" asp-action="Index">Actualizar</a>
		</div>
	</div>
</form>