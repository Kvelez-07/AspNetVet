@model IEnumerable<AspNetVet.Models.Kardex>

@{
    ViewData["Title"] = "Kardex Medicinas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">
                Kardex general de medicinas
            </h1>
        </div>
    </div>
</div>

<div class="SearchBox">
    <form action="/" method="post" class="formSeach">
        <div class="row">
            <div class="col-md-2">
                <a class="btn btn-danger w-100" id="btnRegresar" asp-action="Index">Regresar</a>
            </div>
            <div class="col-md-1">
                <label class="lblSearch">
                    Buscar:
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" class="px-4 form-control" name="busqueda" placeholder="CÃ³digo / nombre"/>
            </div>
            <div class="col-md-1">
                <label for="selectTipo" class="formText">Tipo de medicinas:</label>
            </div>
            <div class="col-md-2">
                <select class="form-control" id="selectTipo">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-md-2">
                <a class="btn btn-info w-100" id="btnBuscar">Buscar</a>
            </div>
        </div>
    </form>
    <br />
</div>
<div class="container-fluid">
    <!-- Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="TableModel" class="table table-bordered table-hover">
                    <thead>
                    <tr class="text-center" style="background-color: #8954a8; color: white;">
                        <th class="px-3 py-2">Id Kar</th>
                        <th class="px-3 py-2">Id</th>
                        <th class="px-3 py-2">Cantidad</th>
                        <th class="px-3 py-2">Tipo</th>
                        <th class="px-3 py-2">Fecha</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var kardex in Model)
                        {
                            <tr>
                                <td class="text-center">@kardex.</td>
                                <td class="text-center">@kardex.Item_Id</td>
                                <td class="text-center">@kardex.Quantity</td>
                                <td class="text-center">@kardex.Movement_Type</td>
                                <td class="text-center">@kardex.Date_Of_Movement!.Value.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center">1</td>
                            <td class="text-center">000001</td>
                            <td>sample text</td>
                            <td>sample text</td>
                            <td>sample text</td>
                        </tr>
                        <tr>
                            <td colspan="5" class="text-center">No se encontraron mas movimientos.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>