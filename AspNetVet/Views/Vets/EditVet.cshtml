@model AspNetVet.Models.AppUsers

@{
    ViewData["Title"] = "Editar Veterinario";
}


<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }
    .main-nav li {
        padding: 10px 20px;
        position: relative;
        cursor: pointer;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }

    .main-nav li:hover .dropdown-content {
        display: block;
    }

    .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-group {
        display: flex;
        margin-bottom: 40px;
        align-items: center;
    }
    .form-field {
        flex: 1;
    }

    .form-field input,
    .form-field select,
    .form-field textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
</style>


<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">Editar Veterinario</h1>
        </div>
    </div>
</div>
<br />
<br />

<form asp-action="EditVet" method="post">
    <div class="form-container">
        <div class="form-group row">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <label class="formText" asp-for="Code">Código:</label>
            </div>
            <div class="form-field col-sm-3">
                <input asp-for="Code" class="form-control"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="col-sm-1">
                <label class="formText" asp-for="FullName">Nombre completo:</label>
            </div>
            <div class="form-field col-sm-3">
                <input asp-for="FullName" class="form-control"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <label class="formText" asp-for="Email">Correo:</label>
            </div>
            <div class="form-field col-sm-3">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-sm-1">
                <label class="formText" asp-for="Phone">Teléfono:</label>
            </div>
            <div class="form-field col-sm-2">
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2  text-center">
                <label class="formText  text-center" for="Specialty">Especialidad:</label>
            </div>
            <div class="form-field col-sm-4">
                <input id="Specialty" class="form-control"/>
                <span validation-for="Specialty" class="text-danger"></span>
            </div>
            <div class="col-sm-2">
                <a asp-action="GetVetSpecialty" class="btn btn-primary w-100 h-100 align-content-center">Buscar</a>
            </div>
        </div>
    </div>

    <div class="bottom-buttons">
        <div class="row w-100 d-flex">
            <div class="col-sm-3"></div>
            <div class="col-sm-5 w-25">
                <a asp-action="Index" class="btn btn-danger w-100 h-100 align-content-center">Regresar</a>
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-5 w-25">
                <a asp-action="Index" class="btn btn-success w-100 h-100 align-content-center">Agregar</a>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}