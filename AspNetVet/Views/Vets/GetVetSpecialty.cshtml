@model IEnumerable<AspNetVet.Models.Vet_Specialty>

@{
    ViewData["Title"] = "Especialidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #vetsTable {
        border-collapse: collapse;
        width: 100%;
        margin-top: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        #vetsTable thead tr {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        #vetsTable th, #vetsTable td {
            text-align: center;
            border: 1px solid #ddd;
            padding: 8px;
            vertical-align: middle;
        }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 0.375rem 0.75rem;
    }

    #searchBtn {
        background-color: #7579E7;
        border-color: #7579E7;
    }

    #addButton {
        background-color: #7CFC00;
        border-color: #7CFC00;
        color: #333;
    }

    .bottom-buttons {
        display: flex;
        justify-content: space-between;
        background-color: #eeebf8;
        position: fixed;
        bottom: 0;
        width: 100%;
        left: 0;
        padding: 20px;
        box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.05);
    }

    .buttons-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .btn-regresar,
    .btn-guardar {
        border: none;
        padding: 12px 50px;
        border-radius: 6px;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-regresar {
        background-color: #e79a9a;
        color: black;
    }

    .btn-guardar {
        background-color: #92ec92;
        color: black;
    }

    .btn-regresar:hover {
        background-color: #d17777;
    }

    .btn-guardar:hover {
        background-color: #7bdc7b;
    }

    .form-label {
        width: 100%;
        text-align: left;
        padding-bottom: 5px;
    }

    .buttons-container {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }

    .btn-regresar,
    .btn-guardar {
        width: 100%;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm text-center">
            <h1 class="lblSearch">Especialidad</h1>
        </div>
    </div>
</div>

<br />
<br />

<div class="container-fluid">
    <!-- Search Section -->
    <div class="row mb-3">
        <div class="col-md-1">
            <label class="lblSearch">Buscar:</label>
        </div>
        <div class="col-md-5">
            <input type="text" id="search" class="form-control" placeholder="Especialidad" />
        </div>
        <div class="col-md-2">
            <select id="breed" class="form-control">
                <option value="">Todas</option>
                <option value="1">Nombre</option>
                <option value="2">Código</option>
            </select>
        </div>
        <div class="col-md-2">
            <button id="searchBtn" class="btn btn-primary w-100">Buscar</button>
        </div>
    </div>

    <!-- Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="vetsTable" class="table table-bordered">
                    <thead>
                        <tr class="text-center" style="background-color: #8954a8; color: white;">
                            <th>Id</th>
                            <th>Nombre Especialidad</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var vet in Model)
                            {
                                <tr>
                                    <td class="text-center">@vet.ID_Vet</td>
                                    <td class="text-center">@vet.Specialty</td>
                                    <td class="text-center">
                                        <a asp-action="SelectSpecialty" asp-route-id="@vet.ID_Vet" class="btn btn-sm btn-link p-0 mx-1" style="color: black">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                                <path d="..." /> <!-- SVG path unchanged for brevity -->
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="text-center">1</td>
                                <td>sample text</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-link p-0 mx-1" style="color: black" asp-action="SelectSpecialty">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="6" class="text-center">No se encontraron mas especialidades.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="bottom-buttons">
        <div class="buttons-container">
            <a asp-action="Index" class="btn-regresar">Regresar</a>
            <button type="submit" class="btn-guardar">Guardar</button>
        </div>
    </div>
</div>